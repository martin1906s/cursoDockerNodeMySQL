datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  rol      String  @default("usuario")
  password String
  tareas   Tarea[]
}

model Tarea {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  completada  Boolean  @default(false)
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
}
